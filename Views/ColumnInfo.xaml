<Window x:Class="FinalApplication.Views.ColumnInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalApplication.Views"
             mc:Ignorable="d" 
             Title="Add the Parameter to column" Height="200" Width="350" ResizeMode="NoResize">
    <Grid>
        <Label Content="Parameter Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="ParameterNameTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="10,30,0,0"/>

        <Label Content="Parameter Value:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
        <TextBox Name="ParameterValueTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="10,80,0,0"/>

        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,120,10,0" Click="OKButton_Click"/>
   
    </Grid>
</Window>
