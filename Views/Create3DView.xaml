<Window x:Class="FinalApplication.Views.Create3DView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visibility Settings" Height="400" Width="300" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Select Categories to Display:" Margin="0,0,0,10" />
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="CategoryStackPanel" />
        </ScrollViewer>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" Width="80" Margin="5" />
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
