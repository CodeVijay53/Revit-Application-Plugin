<Window x:Class="FinalApplication.Views.DoorType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalApplication.Views"
             mc:Ignorable="d" 
             Title="Select Door Type" Height="200" Width="350" ResizeMode="NoResize">
    <Grid>
        <Label Content="Select Door Type:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,20,0,0"/>
        <ComboBox Name="DoorTypeComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,60,0,0"/>
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,60,10,0" Click="OKButton_Click"/>    
    </Grid>
</Window>
