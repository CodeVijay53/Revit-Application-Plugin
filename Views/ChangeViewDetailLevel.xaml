<Window x:Class="FinalApplication.Views.ChangeViewDetailLevel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Detail Level" Height="120" Width="400" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Select a Detail Level:" Margin="0,0,0,10" />
        <ComboBox x:Name="DetailLevelComboBox" Grid.Row="1" Margin="0,0,0,10">
            <ComboBoxItem Content="Coarse" Tag="1" />
            <ComboBoxItem Content="Medium" Tag="2" />
            <ComboBoxItem Content="Fine" Tag="3" />
        </ComboBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" Width="80" Margin="5" />
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
